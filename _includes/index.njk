<div class="intro">
  <p>
    Hegoa is a record label, live series and publishing platform focused on experimental, traditional and underground music.
  </p>
</div>

{% for block in ["releases", "radio", "read", "live", "watch"] %}
  <div class="entry-block">
    <div class="section-title">{{ block == "releases" ? "catalog" : block }}</div>
    <div class="entries">
      {% for item in collections[block] | sort(attribute="data.date") | reverse %}
        {% if item.data.external_url %}
          <a href="{{ item.data.external_url }}" target="_blank">{{ item.data.title }}</a>
        {% else %}
          <a href="{{ item.url }}">{{ item.data.title }}</a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endfor %}
